<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/greyBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/a_main_layout_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="18"
            android:background="#000">

            <ImageView
                android:id="@+id/imageBote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/maquina_exmaple"
                android:scaleType="centerCrop"
                android:background="@drawable/degree_grey"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/degree_grey"
                android:layout_gravity="bottom"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top"
            android:layout_weight="0"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:background="@drawable/gnow_target_background">


            <TextView
                android:id="@+id/tituloBote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Máquina de Escribir"
                android:textColor="@color/grey"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:background="@color/greyTarget"
                android:layout_gravity="center"
                android:paddingRight="100dp"
                android:paddingLeft="100dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:id="@+id/descripcionBote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se necesita recaudar suficiente dinero para comprar máquina de escribir de colección."
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:background="@color/greyTarget"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="100dp"
                android:paddingLeft="100dp"/>

            <TextView
                android:id="@+id/nomTitularBote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joan Molinas"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/dineroTransBote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="0.6"
                    android:hint="10.00"
                    android:textColorHint="#1D96D9"
                    android:gravity="right|center"
                    android:textSize="45sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="€"
                    android:paddingLeft="2dp"
                    android:gravity="left|center"
                    android:textColor="#1D96D9"
                    android:textSize="55sp"/>

            </LinearLayout>
            <Button
                android:id="@+id/transferButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green_background"
                android:textColor="@color/white"
                android:text="Transferir"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/a_main_layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center"
        android:background="@color/greyTarget"
        >

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/logogris"
            android:padding="10dp"/>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="5dp"/>


    </LinearLayout>
</LinearLayout>